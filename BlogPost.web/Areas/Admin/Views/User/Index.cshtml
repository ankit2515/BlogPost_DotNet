@model List<BlogPost.web.ViewModel.UserVm>;

@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="container-fluid">
        <a class="btn btn-primary mb-2" asp-action="Register" asp-controller="User">Add User</a>
        <div class="card-header bg-primary">
            <h4 class="card-title  text-white">
                List of Users
            </h4>
        </div>

        <div class="card-body">
            <table class="table table-striped  table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>

                </thead>
                    <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Roles</td>
                            <td>
                                <a class="btn btn-info" asp-action="ResetPassword" asp-route-id="@user.Id">Reset Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>