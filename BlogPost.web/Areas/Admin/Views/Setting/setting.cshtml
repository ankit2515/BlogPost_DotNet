@model BlogPost.web.ViewModel.SettingVm;

@{
    ViewData["Title"] = "site Setting";
}

<div>
    <div class="container-fluid">
        <a class="btn btn-primary mb-2" asp-action="Index" asp-controller="Post" asp-area="Admin">Go Back</a>
        <div class="card-header bg-primary">
            <h4 class="card-title  text-white">
               Setting
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="Index" asp-controller="Setting" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div class="row mb-2">
                    <div class="col-9">
                        <div class="mb-2">
                            <label>Site Name</label>
                            <input type="text" asp-for="SiteName" class="form-control" />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Short Description</label>
                            <input type="text" asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Facebook Url</label>
                            <input type="text" asp-for="FacebookUrl" class="form-control" />
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>GitHub Url</label>
                            <input type="text" asp-for="GithubUrl" class="form-control" />
                            <span asp-validation-for="GithubUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Twitter Url</label>
                            <input type="text" asp-for="TwitterUrl" class="form-control" />
                            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="mb-2">
                            @{
                                if (Model.ThumbnailUrl == null)
                                {
                                    <img src="~/thumbnail/OIP.jpg" class="img-fluid" id="thumbnail" />
                                }
                                else
                                {
                                    <img src="~/thumbnail/@Model.ThumbnailUrl" class="img-fluid" id="thumbnail" />
                                }
                            }
                        </div>
                        <div class="mb-2">
                            <label>Thumbnail</label>
                            <input type="file" asp-for="Thumbnail" class="form-control  custom-file" rows="8" />
                            <span asp-validation-for="Thumbnail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-1">
                    <button type="submit" class="btn btn-dark w-100">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

 @section Scripts {
     <partial name="_ValidationScriptsPartial" />
     <script>
         $(".custom-file").on("change", function () {
             var fileName = $(this).val().split("\\").pop();
             $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
             document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0])
         });
     </script>
 }